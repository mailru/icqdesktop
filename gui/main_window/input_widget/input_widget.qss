QPushButton#send_button
{
	border: none;
	width: 32dip;
	height: 32dip;
	border-image: url(:/resources/input_widget/send_100.png);
	margin-left: 0;
	margin-top: 0;
	margin-right: 16dip;
	margin-bottom: 0;
	padding: 0dip;
}

QPushButton#send_button:hover
{
	border-image: url(:/resources/input_widget/send_100_hover.png);
}

QPushButton#send_button:hover:pressed
{
	border-image: url(:/resources/input_widget/send_100_pressed.png);
}

QPushButton#send_button:disabled
{
	border-image: url(:/resources/input_widget/send_100_disable.png);
}

QPushButton#send_button:focus
{
	border: none;
	outline: none;
}

