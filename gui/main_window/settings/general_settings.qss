QWidget
{
    background-color: transparent;
    border: none;
}

QPushButton
{
    font-size: 16dip;
}

QPushButton::menu-indicator
{
    image: url(:/resources/basic_elements/arrow_small_a_100.png);
    width: 12dip;
    height: 8dip;
    subcontrol-origin: padding;
    subcontrol-position: center right;
}

QMenu::item
{
	padding-left: 14dip;
	min-width: 140dip;
	max-width: 248dip;
}

QSlider
{
    height: 24dip;
    background-color: transparent;
}

QSlider::groove:horizontal
{
    border: none;
    background-color: #d7d7d7;
    height: 2dip;
    margin: 0;
}

QSlider::handle:horizontal
{
    background: transparent;
    image: url(:/resources/basic_elements/content_selectbar_100.png);
    border: none;
    width: 8dip;
    height: 24dip;
}
